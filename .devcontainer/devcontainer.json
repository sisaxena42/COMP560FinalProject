{
    "name": "GDP-ML-Env",
    "image": "mcr.microsoft.com/devcontainers/python:3.11", // official Python devcontainer image

    "runArgs": ["--env-file", ".env"],
  
    // After the container is created, install your Python deps
    "postCreateCommand": "pip install -r requirements.txt",
  
    // Mount the workspace into the container
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-toolsai.jupyter"
        ]
      }
    }
  }